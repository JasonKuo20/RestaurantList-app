<h1 class="mb-1 restaurant-show-title">修改餐廳資訊</h1>
<div class="container mt-4" style="width: 500px;">
  <form action="/restaurants/{{ restaurant._id }}/edit" method="POST">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label>名稱</label>
        <input type="text" class="form-control" id="inputName" value="{{ restaurant.name }}" name="name" required>
      </div>
      <div class=" form-group col-md-6">
        <label>英文名稱</label>
        <input type="text" class="form-control" id="inputNameEN" value="{{ restaurant.name_en }}" name="name_en"
          required>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label>類別</label>
        <input type="text" class="form-control" id="inputCategory" value="{{ restaurant.category }}" name="category"
          required>
      </div>
      <div class=" form-group col-md-4">
        <label>電話</label>
        <input type="text" class="form-control" id="inputPhone" value="{{ restaurant.phone }}" name="phone" required>
      </div>
      <div class=" form-group col-md-2">
        <label>評分</label>
        <input type="number" class="form-control" id="inputRating" value="{{ restaurant.rating }}" min="0" max="5"
          step="0.1" name="rating" required>
      </div>

    </div>
    <div class=" form-group">
      <label>地址</label>
      <input type="text" class="form-control" id="inputAddress" value="{{ restaurant.location }}" name="location"
        required>
    </div>
    <div class="form-group">
      <label>Google map</label>
      <input type="text" class="form-control" id="inputGoogleMap" value="{{ restaurant.google_map }}" name="google_map"
        required>
    </div>
    <div class="form-group">
      <label>圖片位址</label>
      <input type="text" class="form-control" id="inputImgAddress" value="{{ restaurant.image }}" name="image" required>
    </div>
    <div class="form-group">
      <label>簡介</label>
      <textarea class="form-control" id="inputDescription" style="height: 150px;" name="description"
        required>{{ restaurant.description }}</textarea>
    </div>
    <div class="d-flex justify-content-end">
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
  </form>

</div>